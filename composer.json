{
    "name": "rquadling/abstract-console",
    "description": "Abstract Application and Command with Input and Output helpers used by RQuadling's projects",
    "authors": [
        {
            "name": "Richard Quadling",
            "email": "RQuadling@GMail.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "^7",
        "rquadling/class-file-conversion": "^1.0.0",
        "rquadling/dependency-injection": "^1.0.0",
        "rquadling/environment": "^1.0.0",
        "rquadling/reflection": "^1.0.0",
        "symfony/console": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "RQuadling\\Console\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RQuadlingTests\\Console\\": "tests/"
        }
    },
    "extra": {
        "update-helper": "RQuadling\\Console\\Validation"
    },
    "scripts": {
        "cs-lint": "php-cs-fixer fix --diff -vvv --dry-run",
        "cs-fix": "php-cs-fixer fix . -vvv || true",
        "sa": "vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress --ansi -l 7 lib tests"
    }
}
